            audio_play_sound(sndGrab, 20, false);
            if(image_index == 0) //bat
            {
                other.weapon = 1;
                other.sprite_index = sprBat;
                other.use = other.BAT_SWINGS;
            }
            else if(image_index == 1) //shotgun
            {
                other.weapon = 2;
                other.sprite_index = sprShotgun;
                other.use = other.SHELLS;
            }
            instance_destroy();
        }
        with instance_place(x, y, objThrowable) //throwable
        {
            audio_play_sound(sndGrab, 20, false);
            audio_play_sound(sndThrowable, 20, false);
            other.weapon = 3;
            other.sprite_index = sprGrabThrowable;
            global.g_throwableIndex = image_index;
            other.use = other.THROWABLE;
            instance_destroy();
        }
        alarm[0] = 20;
    }
    //BAT
    else if (weapon = 1)
    {
        audio_play_sound(sndBat, 10, false);
        image_speed = 1;
        alarm[0] = 30;
        use--;
    }
    //SHOTGUN
    else if (weapon = 2)
    {
        audio_play_sound(sndShotgun, 100, false);
        audio_play_sound(sndShotgunE, 90, false);
        for(index = 0; index &lt; 5; index++)
        {
            global.g_dir = random(40) - 20
            if(image_xscale &lt; 0)
                global.g_dir += 180;
            instance_create(x, y, objBullet);
        }
        image_speed = 1.5;
        alarm[0] = 35;
        use--;
    }
    //THROWABLE
    else if (weapon = 3)
    {
        //audio_play_sound();
        global.g_throwableIndex = image_index;
        global.g_isThrowableMissile = 1;
        global.g_dir = image_xscale;
        instance_create(x, y - THROWABLE_ADDED_SPACE, objThrowable);
        alarm[0] = 5;
        use--;
    }
